{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017"],
    "outDir": "build",
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": ["types/*", "src/*", "node_modules/*"]
    }
  },
  "include": ["./src/**/*", "./types/**/*"]
}
